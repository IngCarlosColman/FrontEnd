gris_texto = #7a7a7a
naranja = #dd4f24
azul = #22bce0
gris_oscuro = #444

@font-face {
    font-family: 'iconitos';
    src:    url('../fonts/icomoon.eot?qtrzit');
    src:    url('../fonts/icomoon.eot?qtrzit#iefix') format('embedded-opentype'),
        url('../fonts/icomoon.ttf?qtrzit') format('truetype'),
        url('../fonts/icomoon.woff?qtrzit') format('woff'),
        url('../fonts/icomoon.svg?qtrzit#icomoon') format('svg');
    font-weight: normal;
    font-style: normal;
}
a
	color naranja

body
	background #E8E8E8
	color gris_oscuro
	font-family Arial
	font-size 16px

footer
	background naranja
	color rgba(white,0.5)
	padding 1em 0
	text-align center
	width 100%	
	
	h3
		font-size 14px
		font-weight normal
		
		strong
			display block
			
			.mejor
				&:before
				&:after
					content " - "
					

header
	background gris_oscuro
	color white
	padding 0.5em
	position relative
	overflow hidden
	box-shadow 0 5px 0 rgba(0,0,0,0.2)
	z-index 1
	
	.logo
		float left
		border-right 1px solid azul
		width 60px
		img
			width 52px
	.titular
		margin 0 80px 0 70px

		.filtro
			color azul
			font-style italic
			font-size 14px
			font-weight bold
			text-decoration none
		.publicar
			background naranja
			color white
			margin -0.5em 0 0 0
			padding 0.2em 0.5em
			text-decoration none
			font-weight bold
			font-style italic
			text-shadow 1px 1px 0px black
			float right
			
			&:before
				display inline-block
				margin 0 3px 0 0 
				content "\e900"
				font-family "iconitos"
				font-size 1.2em
				
			
		.titulo
			font-size 18px
			font-wight normal
			margin 0
			padding 0
	.usuario
		position absolute
		right 0px
		top 0px
		
		
		.avatar
			margin 0.5em 2em 0 0
			position relative
			z-index 2
			img 
				width 50px
				border-radius 50%

		.flechita
			display block
			color white
			margin -0.5em 1em 0 1em
			background naranja
			text-align right
			padding 3px
			position absolute
			top 30px
			text-decoration none
			width 2em
			right 0
			&:after
				font-family "iconitos"
				content "\f05b"
				text-shadow 1px 1px 0px black
				
			

				
nav
	background azul
	border-left 15px solid white
	position relative
	&:before
		border-left 7px solid white
		border-bottom 20px solid transparent
		border-top 20px solid transparent
		content " "
		position absolute
		top 0
		left 0px
	.menu
		height 40px
		line-height 40px
		margin 0
		padding 0
		overflow-x auto
		white-space nowrap
		
		li
			display inline-block
			a 
				color white
				display block
				margin 0 0.5em
				padding 0 0.2em
				text-decoration none
				
.posts
	padding 0.5em
	.post
		margin-bottom 1em
		background white
		color gris_texto
		border-radius 0 0 0.5em 0.5em
		box-shadow 2px 2px 10px rgba(black, 0.5)
		
		.acciones
			border-top 3px solid azul
			padding 0.5em
			overflow hidden
			
			.datos
				float right

				.comentarios
					background gris_texto
					color white
					margin 0 1em 0 0
					padding 2px 5px
					border-radius 3px
					text-decoration none
				.estrellita
					text-decoration none
					&:after
						color yellow
						content: "\e901"
						font-size 1.3em
						font-family "iconitos"
						color yellow
						
					
			.votos
				float left
				.down
				.up
					line-height 1.5em
					text-decoration none
					vertical-align bottom

				.down 
					color red
					&:before
						font-family "iconitos"
						font-size 1.5em
						content "\f05b"
				.up
					color green
					&:before
						font-family "iconitos"
						font-size 1.5em
						content "\f0aa"
		.descripcion
			color gris_texto
			
			.detalles
				height 160px
				margin-left 130px
				.autor
					margin 0.5em 0 2em 0
					
				.fecha 
					float right
					margin 0 1em 0 0
				.tag 
					background azul
					border-radius 0.5em
					color white
					padding 0.2em 0.5em
					text-decoration none
					
				.titulo
					font-size 18px
					font-style italic
					color gris_oscuro
					margin 0
					padding 0.5em 0.5em 0 0
			
			.imagen
				float left
				margin 0
				img 
					width 120px
					vertical-align top
					height 160px
			
@media screen and (min-width: 768px)
	header
		.titular
			.publicar
				padding-left 3em
				position relative

				&:before
					left 0px
					position absolute
					top -10px
					font-size 2.5em

	.posts
		.post
			display inline-block
			width 48%
			vertical-align top
			&:nth-child(odd)
				margin-right 2%